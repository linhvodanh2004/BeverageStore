<Window x:Class="BeverageStore.WPF.Manager.ViewProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeverageStore.WPF.Manager"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:navbar="clr-namespace:BeverageStore.WPF.Layout"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="View profile"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sidebar Navigation -->
        <navbar:ManagerNavigation HorizontalAlignment="Stretch" Grid.Row="0"/>

        <!-- Main Content Area -->
        <StackPanel Grid.Row="1" Margin="20">

            <!-- Username & Fullname -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="Username"
                         materialDesign:HintAssist.Hint="Username"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         materialDesign:HintAssist.Foreground="Black"
                         FontSize="13"
                         VerticalAlignment="Center"
                         Margin="5"/>

                <TextBox Grid.Column="1" x:Name="Fullname"
                         materialDesign:HintAssist.Hint="Fullname"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         materialDesign:HintAssist.Foreground="Black"
                         FontSize="13"
                         VerticalAlignment="Center"
                         Margin="5"/>
            </Grid>

            <!-- Phone & Email -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" x:Name="Phone"
                         materialDesign:HintAssist.Hint="Phone"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         materialDesign:HintAssist.Foreground="Black"
                         FontSize="13"
                         VerticalAlignment="Center"
                         Margin="5"/>

                <TextBox Grid.Column="1" x:Name="Email"
                         materialDesign:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         materialDesign:HintAssist.Foreground="Black"
                         FontSize="13"
                         VerticalAlignment="Center"
                         Margin="5"/>
            </Grid>

            <!-- Date of Birth & Gender -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0" x:Name="Dob"
                            materialDesign:HintAssist.Hint="Date of birth"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            Margin="5"/>

                <Grid Grid.Column="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Gender " FontSize="13" Margin="0 15 0 5" Foreground="Gray"/>
                        <RadioButton x:Name="Male"
                                     Content="Male"
                                     GroupName="Gender"
                                     Margin="10 15 0 7"
                                     Background="Black"
                                     Foreground="Gray"
                                     IsChecked="True"/>
                        <RadioButton x:Name="Female"
                                     Content="Female"
                                     GroupName="Gender"
                                     Margin="10 15 0 7"
                                     Background="Black"
                                     Foreground="Gray"/>
                    </StackPanel>

                    <!-- Horizontal Line -->
                    <Border Height="1" Background="Gray" Grid.ColumnSpan="2" Margin="0,41,5,0"/>
                </Grid>
            </Grid>

            <!-- Password -->
            <PasswordBox x:Name="Password"
                         materialDesign:HintAssist.Hint="Password"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         FontSize="13"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         Margin="5"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

            <!-- Confirm Password -->
            <PasswordBox x:Name="ConfirmPassword"
                         materialDesign:HintAssist.Hint="Confirm password"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:HintAssist.FloatingScale="0.8"
                         FontSize="13"
                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                         Margin="5"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

            <!-- Register Button -->
            <Grid Width="300" Margin="0 20 0 20">
                <Button Height="40" Width="300"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="Black"
                        ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Register  "/>
                        <materialDesign:PackIcon Kind="AccountArrowRightOutline"
                                                 Width="24" Height="20"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>