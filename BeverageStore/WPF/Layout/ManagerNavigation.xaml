<UserControl x:Class="BeverageStore.WPF.Layout.ManagerNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeverageStore.WPF.Layout"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <materialDesign:ColorZone Mode="PrimaryDark" Padding="5" 
                              CornerRadius="3" Margin="2" Background="Black">
            <Grid Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Button Content="Home" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="Transparent" Click="Home"></Button>
                <Button Content="Employee" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="1" BorderThickness="0" Background="Transparent" Click="Employee"></Button>
                <Button Content="Order" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="2" BorderThickness="0" Background="Transparent"></Button>
                <Button Content="Seat" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="3" BorderThickness="0" Background="Transparent"></Button>
                <Button Content="Category" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="4" BorderThickness="0" Background="Transparent"></Button>
                <Button Content="Beverage" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="5" BorderThickness="0" Background="Transparent"></Button>
                <Button Content="Ingredient" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="6" BorderThickness="0" Background="Transparent"></Button>
                <Button Content="My profile" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="7" BorderThickness="0" Background="Transparent" Click="MyProfile"></Button>
                <Button Content="Logout" Foreground="White" FontSize="15" Grid.Row="0" Grid.Column="8" BorderThickness="0" Background="Red" Click="Logout"></Button>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
